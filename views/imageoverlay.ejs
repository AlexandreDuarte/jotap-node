<div id="imageoverlay">
    <div id="grid-imageoverlay">
        <button id="back" onclick="closeImageoverlay()">
            <span lang="pt">VOLTAR</span>
            <span lang="en">BACK</span>
        </button>
        <div id="imageoverlay-image" style="<%= obra.style %>"></div>
        <div id="imageoverlay-description">
            <h1>
                <span lang="pt"><%= obra.titlept %></span>
                <span lang="en"><%= obra.titleen %></span>
            </h1>
            <p id="imageoverlay-p">
                <span lang="pt"><%= obra.descriptionpt %></span>
                <span lang="en"><%= obra.descriptionen %></span>
            </p>
        </div>
    </div>

</div>